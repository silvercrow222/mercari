%h2 新規登録
= render "devise/shared/links"
%br/
%br/
= form_for(@user, url: user_registration_path) do |f|
  = render "devise/shared/error_messages", resource: @user
  .field
    = f.label :"ニックネーム"
    %br/
    = f.text_field :nickname, autofocus: true, autocomplete: "nickname" , placeholder: "例)ジョー"
  .field
    = f.label :"メールアドレス"
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email" , placeholder: "PC・携帯どちらでも可"
  .field
    = f.label :"パスワード"
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password" , placeholder: "7文字以上の半角英数字"
  .field
    = f.label :"パスワード(確認用)"
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password" , placeholder: ""
  %br/
  %h2 本人確認
  %div
    安心・安全にご利用いただくために、
    %br/
    お客さまの本人情報の登録にご協力ください。
    %br/
    他のお客さまに公開されることはありません。
  %br/
  %h2 お名前(全角)
  .field
    = f.label :"苗字"
    %br/
    = f.text_field :family_name, autofocus: true, autocomplete: "family_name" , placeholder: "例)山田"
  .field
    = f.label :"名前"
    %br/
    = f.text_field :first_name, autofocus: true, autocomplete: "first_name" , placeholder: "例)太郎"
  %br/
  お名前カナ(全角)
  .field
    = f.label :"苗字(カナ)"
    %br/
    = f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana" , placeholder: "例)ヤマダ"
  .field
    = f.label :"名前(カナ)"
    %br/
    = f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" , placeholder: "例)タロウ"
  %br/
  .field
    = f.label :"生年月日"
    %br/
    = f.date_select(                 |
      :birthday,                     |
      include_blank: true,           |
      use_month_numbers: true,       |
      start_year: 1920,              |
      end_year: (Time.now.year - 1), |
      default: Date.new(1950, 1, 1)) |
  .field
    = f.label :"電話番号"
    %br/
    = f.text_field :phone, autofocus: true, autocomplete: "phone", placeholder: "例)08011110001"
  .field
    = f.label :"プロフィール"
    %br/
    = f.text_field :profile, autofocus: true, autocomplete: " profile", placeholder: "省略可"
  .field
    = f.label :"アイコン"
    %br/
    = f.text_field :icon, autofocus: true, autocomplete: "icon", placeholder: "省略可"
  %br/
  .actions
    = f.submit "Next"
%br/
